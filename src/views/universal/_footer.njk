{% macro footerEventsGenerator(events) %}
  {% for event in events %}
    {{ footerEvent(event.title, event.date, event.link) }}
  {% endfor %}
{% endmacro %}

{% macro footerEvent(title, date, link) %}
  <div class="my-3">
    <a href="{{ link }}" target="_blank" rel="noopener noreferrer" class="footer-link thicc">
      {{ title }}
    </a>
    <div class="kbl-text soft">{{ date }}</div>
  </div>
{% endmacro %}

