<!DOCTYPE html>
<html class="no-js" lang="en">
{% from "universal/_header.njk" import header %}
{{ header() }}

<body class="auth-theme-rashmore">
  {% from "universal/_navbar.njk" import navbar %}
  {{ navbar("People", "Alumni") }}

  {% from "components/img-header.njk" import imgHeader %}
  {{ imgHeader() }}

  {% from "components/breadcrumb.njk" import breadcrumb %}
  {{ breadcrumb([{name: 'Home', link: '/'}, {name: 'People', link: '/people'}, {name: 'Alumni', link: '/people/alumni'}]) }}

<article class="container mt-3">

  {% from "components/person-card.njk" import personCardModal %}
  {% from "../people-data.njk" import alumni %}

  <div class="row">
    <div class="col-12">
      <div class="kbl-header-bar text-center py-2">
        <h4 class="kbl-heading my-auto">Alumni (Utah State University)</h4>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    {% for person in alumni %}
      <div class="col-md-3 col-sm-6  text-center">
        {{ personCardModal(person) }}
      </div>
    {% endfor %}
  </div>

