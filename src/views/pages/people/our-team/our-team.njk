<!DOCTYPE html>
<html class="no-js" lang="en">
{% from "universal/_header.njk" import header %}
{{ header() }}

<body>
  {% from "universal/_navbar.njk" import navbar %}
  {{ navbar("People", "Our Team") }}

  {% from "components/img-header.njk" import imgHeaderSplit %}
  {{ imgHeaderSplit(headerTitle="Our Team") }}

  {% from "components/breadcrumb.njk" import breadcrumb %}
  {{ breadcrumb([{name: 'Home', link: '/'}, {name: 'People', link: '/people'}, {name: 'Our Team', link: '/people/our-team'}]) }}

  <article class="container">
    {% include "../_new-rakesh.njk" %}

    {% from "components/person-card.njk" import personCardModal %}
    {% from "../people-data.njk" import bioinfoStaff, gradStudents, undergradStudents %}

    <div class="row">
      <div class="col-12">
        <div class="kbl-header-bar text-center py-2">
          <h4 class="kbl-heading my-auto">Graduate</h4>
        </div>
      </div>
    </div>

    <div class="row mt-3 justify-content-center">
      {% for person in gradStudents %}
        <div class="col-md-3 col-sm-6 text-center">
          {{ personCardModal(person) }}
        </div>
      {% endfor %}
    </div>
    
    {% if false %}
    <div class="row">
      <div class="col-12">
        <div class="kbl-header-bar text-center py-2">
          <h4 class="kbl-heading my-auto">Undergraduate</h4>
        </div>
      </div>
    </div>

    <div class="row mt-3 justify-content-center">
      {% for person in undergradStudents %}
        <div class="col-md-3 col-sm-6 text-center">
          {{ personCardModal(person) }}
        </div>
      {% endfor %}
    </div>
    {% endif %}

    <div class="row">
      <div class="col-12">
        <div class="kbl-header-bar text-center py-2">
          <h4 class="kbl-heading my-auto">Bioinformatics Staff</h4>
        </div>
      </div>
    </div>

    <div class="row mt-3 justify-content-center">
      {% for person in bioinfoStaff %}
        <div class="col-md-3 col-sm-6 text-center">
          {{ personCardModal(person) }}
        </div>
      {% endfor %}
    </div>

  </article>

  {% include "universal/_footer.njk" %}
  {% from "universal/_footer-scripts.njk" import scripts %}
  {{ scripts() }}
</body>

</html>
