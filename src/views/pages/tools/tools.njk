<!DOCTYPE html>
<html class="no-js" lang="en">
{% from "universal/_header.njk" import header %}
{{ header("events") }}

<body>
  {% from "universal/_navbar.njk" import navbar %}
  {{ navbar("Tools") }}

  <article class="container-fluid kbl-top mb-4">
    <div class="row justify-content-center pt-4">
      <div class="col-12 col-md-auto text-center">
        <h1><ion-icon name="cube-outline" class="kbl-header-icon"></ion-icon></h1>
      </div>
      <div class="col-auto pt-3 header-icon-wrapper text-center text-md-start">
        <h1>Tools</h1>
        <h6>
          Services straight from students at KAABiL
        </h6>
      </div>
    </div>
  </article>

  <article class="container">
    {% from "./_tool-section.njk" import toolSection %}
    {% from "./_tool-data.njk" import hpi, clpt, metagenomics, dbs, bioenergy, misc %}

    {{ toolSection("Host-Pathogen Interaction Prediction Tools", hpi, "hpi") }}
    {{ toolSection("Cellular Localization Prediction Tools", clpt, "cellularloc") }}
    {{ toolSection("Metagenomics", metagenomics, "metagenomics") }}
    {{ toolSection("Databases", dbs, "db") }}
    {{ toolSection("Bioenergy", bioenergy, "bionrg") }}
    {{ toolSection("Miscellaneous", misc, "misc") }}
  </article>

  {% include "universal/_footer.njk" %}
  {% from "universal/_footer-scripts.njk" import scripts %}
  {{ scripts() }}
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="assets/js/kbl/uptime.js"></script>
  <script src="assets/js/kbl/devtools/hucopia.js"></script>
</body>

</html>
