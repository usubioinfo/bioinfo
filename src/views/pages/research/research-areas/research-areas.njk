<!DOCTYPE html>
<html class="no-js" lang="en">
{% from "universal/_header.njk" import header %}
{{ header() }}

<body>
  {% from "universal/_navbar.njk" import navbar %}
  {{ navbar("Research", "Research Articles") }}

  {% from "components/img-header.njk" import imgHeader %}
  {{ imgHeader() }}

  {% from "components/breadcrumb.njk" import breadcrumb %}
  {{ breadcrumb([{name: 'Home', link: '/'}, {name: 'Research', link: '/research'}, {name: 'Research Areas', link: '/research/research-areas'}]) }}

  <article class="container mt-5">
    <div class="row justify-content-center">
      {% from './articles.njk' import research %}
      {% from "components/article-link.njk" import articleLink %}
      {% for article in research %}
        <section class="col-3 py-2">
          {{ articleLink(article) }}
        </section>
      {% endfor %}
    </div>
  </article>

  {% include "universal/_footer.njk" %}
  {% from "universal/_footer-scripts.njk" import scripts %}
  {{ scripts() }}
</body>

</html>
