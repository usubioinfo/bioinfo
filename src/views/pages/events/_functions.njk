{% from "components/event-link.njk" import eventLink%}
{% macro selector(btnString, routerEventsYearRange) %}
  {% if btnString === routerEventsYearRange %}
    <div class="col-auto">
      <a href="/events?range={{ btnString }}" class="kbl-date-selector active">{{ btnString }}</a>
    </div>
  {% else %}
    <div class="col-auto">
      <a href="/events?range={{ btnString }}" class="kbl-date-selector">{{ btnString }}</a>
    </div>
  {% endif %}
{% endmacro %}

{% macro activeCheck(yearString, routerEventsYearRange) %}
  {% if yearString === routerEventsYearRange %}
  {% else %}
    d-none
  {% endif %}
{% endmacro %}

{% macro eventsGenerator(events,year,yearID,routerEventsYearRange) %}
  <section class="{{ activeCheck(year, routerEventsYearRange) }}" id={{yearID}}>
    <h4 class="kbl-heading text-center">{{year}}</h4>
    <div class="row justify-content-center">
          {% for event in events%}
      <div class="col-sm-6">
        {{ eventLink(event) }}
      </div>
          {% endfor %}
    </div>
  </section>
{% endmacro %}