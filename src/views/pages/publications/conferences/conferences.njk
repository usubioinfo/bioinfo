<!DOCTYPE html>
<html class="no-js" lang="en">
{% from "universal/_header.njk" import header %}
{{ header("lab_conf-talk") }}

<body>
  {% from "universal/_navbar.njk" import navbar %}
  {{ navbar("Publications", "Conferences") }}

  {% from "components/img-header.njk" import imgHeader %}
  {{ imgHeader() }}

  {% from "components/breadcrumb.njk" import breadcrumb %}
  {{ breadcrumb([{name: 'home', link: '/'}, {name: 'publications', link: '/publications'}, {name: 'conferences', link: '/publications/conferences'}]) }}

  {% from './_functions.njk' import selector %}
  {% from 'components/conf-card.njk' import confCard %}
  {% from './dates/20-22.njk' import pub2022, pub2021, pub2020 %}
  {% from './dates/17-19.njk' import pub2019, pub2018, pub2017 %}
  {% from './dates/14-16.njk' import pub2016, pub2015, pub2014 %}
  {% from './dates/11-13.njk' import pub2013, pub2012 %}
  {% from './dates/08-10.njk' import pub2008, pub2009, pub2010 %}
  {% from './dates/02-04.njk' import pub2004, pub2002 %}

  {% set conferences = [
    {range: '2020-2022', conf: pub2022, year: '2022'},
    {range: '2020-2022', conf: pub2021, year: '2021'},
    {range: '2020-2022', conf: pub2020, year: '2020'},
    {range: '2017-2019', conf: pub2019, year: '2019'},
    {range: '2017-2019', conf: pub2018, year: '2018'},
    {range: '2017-2019', conf: pub2017, year: '2017'},
    {range: '2014-2016', conf: pub2016, year: '2016'},
    {range: '2014-2016', conf: pub2015, year: '2015'},
    {range: '2014-2016', conf: pub2014, year: '2014'},
    {range: '2011-2013', conf: pub2013, year: '2013'},
    {range: '2011-2013', conf: pub2012, year: '2012'},
    {range: '2008-2010', conf: pub2010, year: '2010'},
    {range: '2008-2010', conf: pub2009, year: '2009'},
    {range: '2008-2010', conf: pub2008, year: '2008'},
    {range: '2002-2004', conf: pub2004, year: '2004'},
    {range: '2002-2004', conf: pub2002, year: '2002'}
  ]
  %}

  <article class="container">
    <section class="row pt-5">
      <div class="col-12 kbl-text">
        <li><b>*</b> indicates the corresponding author, italic font indicates contribution by bioinformatics staff member supervised by me</li>
        <li><b><u>underlined font</u></b> indicates contribution by an undergraduate student mentored</li>
        <li><b><u><em>underlined italic font</em></u></b> indicates contribution by a graduate student mentored by me.</li>
        <li><b>$</b> denotes equal contributions</li>
        <li><b>^</b> indicates contributions by students of a collaborator mentored by me</li>
      </div>
    </section>

    <section class="row justify-content-center py-5">
      {{ selector("2020-2022", routerYearRange) }}
      {{ selector("2017-2019", routerYearRange) }}
      {{ selector("2014-2016", routerYearRange) }}
      {{ selector("2011-2013", routerYearRange) }}
      {{ selector("2008-2010", routerYearRange) }}
      {{ selector("2002-2004", routerYearRange) }}
    </section>
  </article>

  <article class="container">
    {% for confSet in conferences %}
      {% if routerYearRange === confSet.range %}
        <section class="row mt-5 mb-2">
          <div class="col-12 text-center">
            <div class="kbl-header-bar py-2">
              <h1 class="kbl-heading">{{ confSet.year }}</h1>
            </div>
          </div>
        </section>
        <section class="row">
          {% for conference in confSet.conf %}
            <div class="col-12">
              {{ confCard(conference) }}
            </div>
          {% endfor %}
        </section>
      {% endif %}
    {% endfor %}
  </article>

  <div class="container mt-5">
    <div class="research-fact">
      <div class="row py-5">
        <div class="col-4 text-center">
          <h2>20</h2>
          <h6>JOURNAL ARTICLES</h6>
        </div>

        <div class="col-4 text-center">
          <h2>$1,524,048</h2>
          <h6>GRANTS RECEIVED</h6>
        </div>

        <div class="col-4 text-center">
          <h2>7</h2>
          <h6>RESEARCH MEMBERS</h6>
        </div>
      </div>
    </div>
  </div>

  {% include "universal/_footer.njk" %}
  {% from "universal/_footer-scripts.njk" import scripts %}
  {{ scripts() }}
</body>

</html>
