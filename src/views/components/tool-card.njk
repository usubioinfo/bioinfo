{% macro toolCard(tool) %}
  <section class="px-4">
    <div class="kbl-tool-card">
      <a href="{{ tool.link }}" target="_blank">
        <section class="thumb">
          <img src="{{ RaikouServer }}{{ tool.img }}" alt="{{ tool.title }} web page.">
        </section>
        <section class="px-3 py-2 title">
          <div class="w-100">
            <span>{{ tool.title }}</span>
            <span id="{{ tool.title }}" class="uptime float-end my-auto">
              <i class="fas fa-circle"></i>
            </span>
          </div>
        </section>
      </a>
    </div>
  </section>
{% endmacro %}

{% macro toolCardOld(tool) %}
  <section class="px-4">
    <div class="kbl-tool-card">
      <a href="{{ tool.link }}">
        <article class="kbl-research-card-container tool mx-auto">
          <div class="kbl-research-card">
            <section class="img-tool">
              <img src="{{ tool.img }}" alt="{{ tool.title }} web page.">
            </section>
            <section class="px-3 flex-text-wrapper pt-2">
              <div class="card-title">{{ tool.title }}</div>
            </section>
          </div>
        </article>
      </a>
    </div>
  </section>
{% endmacro %}
