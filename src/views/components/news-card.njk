            <div class="row ps-0">
              <div class="col ps-0 my-auto">
                <img src="{{news.img}}" class="img-fluid">
              </div>
              <div class="col-10 pt-1">
                <span class="date"><i class="far fa-calendar-alt"></i> {{news.date}}</span>
                <h5 class="header mb-0">{{news.title}}</h5>
                <div class="desc mt-0">
                  <div class="newsLineTruncate">
                    {{news.desc}}
