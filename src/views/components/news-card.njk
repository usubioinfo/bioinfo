{% macro leftMediaCard (media) %}
        <section class="row news-item-container justify-content-center">
          <a class="news-itemFirst col-11" href="{{media.link}}" target="_blank">
            <div class="row ps-0">
              <div class="col px-2 pt-1">
                <span class="date"><i class="far fa-calendar-alt"></i> {{media.date}}</span>
                <h5 class="header mb-0">{{media.title}}</h5>
                <div class="desc mt-0">
                  {{media.desc}}
                </div>
              </div>
            </div>
          </a>
        </section>
{% endmacro %}

